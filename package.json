{
  "name": "server",
  "version": "1.0.3",
  "main": "index.js",
  "description": "A jobbatical clone App.",
  "repository": "https://github.com/chingu-voyages/v8-bears-team-15.git",
  "author": "jidemobell <jidd32@gmail.com>, <medomwande@gmail.com>, <nedumrobert@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel -d build src -s",
    "clean": "rm -rf build && mkdir build",
    "server": "nodemon --exec babel-node src/index.js",
    "seed": "seed",
    "prestart": "npm run clean && npm run build",
    "start": "npm run prestart && node build/index.js",
    "test": "_mocha --require @babel/register --exit",
    "client": "cd client && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn seed\" \"yarn client\"",
    "heroku-postbuild": "cd client && yarn install && yarn install --only=dev --no-shrinkwrap && yarn run build"
  },
  "engines": {
    "node": "10.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "@babel/register": "^7.4.4",
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "colors": "^1.3.3",
    "concurrently": "^4.1.0",
    "connect-mongo": "^2.0.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-simple": "^0.5.6",
    "mongoose": "^5.4.20",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "node-localstorage": "^1.3.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-linkedin-oauth2": "^1.6.1",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.5.0",
    "tracer": "^0.9.8"
  }
}
